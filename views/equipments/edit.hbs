<!DOCTYPE html>
<meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Equipamentos | ElevaEmpilhadeiras</title>


  <link rel="icon" href="/images/logo-eleva.png" />

  <link rel="stylesheet" href="/css/main.css" />
  <link rel="stylesheet" href="/css/animations.css" />
  <link rel="stylesheet" href="/css/sidebar.css" />
  <link rel="stylesheet" href="/css/forms.css" />
  <link rel="stylesheet" href="/css/primary-button.css" />
  <link rel="stylesheet" href="/css/page-forms.css" />
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <div id="page-creates">
    <aside class="animate-down sidebar">
      <img class="image-aside" src="/images/logo-eleva.png" alt="logo eleva" />

      <footer>
          <a href="/"><button><img src="/images/arrow-back.svg" alt="Voltar" /></button></a>
      </footer>
    </aside>

    <main class="animate-appear with-sidebar">
      <form action="/equipments/update" method="POST">
        <fieldset>
          <legend>Editar Equipamento</legend>

          <input type="hidden" name="equipment_id" value="{{equipment.id}}">

          <div class="input-block">
            {{#if providerType}}
          <label for="equipment_type">Tipo de equipamento</label>
          <input type="hidden" id="equipment_type" name="provider_type" value="Eleva" required />

          <div class="button-select type-select">
            <button data-type="Eleva" onclick="toggleSelectEquipment(event)" type="button" class="active">
              Eleva
            </button>
            <button data-type="Terceiro" onclick="toggleSelectEquipment(event)" type="button">
              Terceiro
            </button>
          </div>

            {{else}}

            <label for="equipment_type">Tipo de equipamento</label>
          <input type="hidden" id="equipment_type" name="provider_type" value="Terceiro" required />

          <div class="button-select type-select">
            <button data-type="Eleva" onclick="toggleSelectEquipment(event)" type="button" >
              Eleva
            </button>
            <button data-type="Terceiro" onclick="toggleSelectEquipment(event)" type="button" class="active">
              Terceiro
            </button>
          </div>

            {{/if}}
        </div>

          <div class="input-block">
            <label for="made">Fabricante</label>
            <input id="made" name="made" value="{{equipment.manufacturer}}" required />
          </div>

          <div class="input-block">
            <label for="model">Modelo</label>
            <input id="model" name="model" maxlength="25" value="{{equipment.model}}" required />
          </div>

          <div class="input-block">
            <label for="price">Preço<SPAN>(R$)</SPAN> </label>
            <input type="number" id="price" name="price" step="0.01" value="{{equipment.price}}"  required />
          </div>

          <div class="input-block">
            <label for="description">Descrição<span>Máximo de 200 caracteres</span></label>
            <textarea maxlength="200" id="description" name="description">{{equipment.description}}</textarea>
          </div>

          {{#if alertmessage}}
            <h4 class="alert-message">{{alertmessage}}</h4>
          {{else if successmessage}}
            <h4 class="success-message">{{successmessage}}</h4>
          {{/if}}

          <button type="submit" class="primary-button">Editar</button>
        </fieldset>
      </form>
    </main>
  </div>

  <script src="/scripts/animations.js"></script>
</body>
</html>